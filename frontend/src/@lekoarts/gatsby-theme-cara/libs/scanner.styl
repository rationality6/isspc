.Scanner

  box-sizing inherit

  div, header, footer, button
    margin 0
    padding 0
    border 0

  input
    font-size 1rem

  .btn
    background-color #fff
    border 1px solid #888
    border-radius 12px
    padding auto
  padding 0 24px
  width 100%
  display flex
  flex-direction column

  position relative
  z-index 100
  box-shadow 0 0 15px #ddd
  padding 20px
  width 100%
  max-width 720px
  margin 20px auto
  h1
    text-align center
  .search
    text-align center
    form
      input
        padding 0.5em
        border 1px solid #888
        box-sizing border-box
        margin-left 6px
  .submit-btn
    @extend .btn
    color #000
    margin-left 6px
    padding 5px 6px
    font-size 0.8rem

  button:disabled,
  button[disabled] {
    border: 1px solid #999999;
    background-color: #cccccc;
    color: #666666;
  }
  .result
    .message
      text-align center
      font-size 1.4rem
      border-bottom 1px solid #ccc
      padding-bottom 20px
      p
        padding 4px
        margin 0
      .truth
        font-weight bold
    .actions
      .reset, .report
        display block
        margin 0.5em 0
        padding 0.5em 0
        text-align center
      .reset
        @extend .btn
        width 100%
        font-size 1rem
      .report
        font-size 0.8rem
    dl
      word-break keep-all
      margin 1rem auto
      overflow hidden
      display flex
      justify-content center
      dd
        margin-left 10px

  .confetti
    position absolute
    left 50%
    top 4rem
    transform translateX(-50%)
    z-index 1

  #reader-video {
    position: relative;
    width: 100%;
    margin: 0 auto;
    z-index: 1;
  }

  #reader-video video {
    display: block;
    width: 100%;
    z-index: 2;
    @media (orientation: portrait) {
      height: auto;
    }
  }

  .reader-inner {
    display: inline-block;
    position: relative;
  }

  #reader-frame {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 3;
    box-shadow: inset 0 0 0 0px rgba(0, 0, 0, 0.5);
  }

  #reader-canvas {
    display: none !important;
    position: static;
    top: 0;
    left: 0;
    margin: 0;
    padding: 0;
    z-index: 4;
  }

  .reader-zoom {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 30;
    cursor: pointer;
  }

  .reader-zoom:hover {
    background: #aaa;
  }

  .zoom-btn {
    font-size: 24px;
    margin: 3px;
    padding: 3px;
  }

  .controlBox ul {
    display: table;
    width: 100%;
    text-align: center;
  }

  .controlBox ul > li {
    display: table-cell;
  }

  .selectBox ul {
    display: table;
    width: 100%;
    text-align: center;
  }

  .selectBox ul > li {
    display: table-cell;
    text-align: center;
  }

  #reader-input {
    display: none;
  }

  #uploaded {
    display: none;
    width: 1024px;
    height: 1024px;
  }

  .remark-notice {
    color: #666;
    font-size: 1rem;
    line-height: calc(1rem + 1px);
    @media (max-width: 720px) {
      font-size: calc(0.5rem);
      line-height: calc(0.5rem + 1px);
    }
  }