@media screen and (max-width: 800px) { // adjust the width for your needs
    div.brandListDiv {
        grid-template-columns: repeat(4, 1fr);
        gap: 0.5rem;
    }
    div.projectListDiv {
        grid-template-columns: 1fr;
    }
    div.otherListDiv {
        grid-template-columns: 1fr;
    }
    p.BrandTitle {
        font-size: calc(40%);
    }
    p.BrandChildren {
        margin: 0;
    }
}

.mainh1
    h1 {
        display:table;
    }
    .span, .text {
        vertical-align:middle;
        display:table-cell;
        padding: 5px;
    }
.pageLogo {
    height: 1em;
    vertical-align:middle;
    display:table-cell;
}

body		{ font-family: 'NanumSquare', sans-serif }
.normal		{ font-weight: 400 }
.bold		{ font-weight: 700 }
.bolder		{ font-weight: 800 }
.light		{ font-weight: 300 }